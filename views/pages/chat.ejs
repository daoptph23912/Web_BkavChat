<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Messenger Chat</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f0f0f0;
    }

    .container {
      display: flex;
      height: 100vh;
    }

    .user-list {
      flex: 15%;
      background-color: #ffffff;
      padding: 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      overflow-y: auto;
    }

    .chat-area {
      flex: 70%;
      padding: 20px;
      background-color: #ffffff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      overflow-y: auto;
    }

    .user-list h1,
    .chat-area h1 {
      font-size: 24px;
      margin-bottom: 10px;
      color: #333333;
    }

    .user-list ul,
    .chat-area ul {
      list-style: none;
      padding: 0;
      margin: 0;

    }

    .user-list li {
      padding: 20px;
      margin-left: 5px;
    }

    .chat-area li {
      padding: 10px;
      border-bottom: 1px solid #dddddd;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .user-list a:hover,
    .chat-area li:hover {
      background-color: #f9f9f9;
    }

    .chat-area li {
      text-align: right;
    }

    .chat-area li.sender {
      text-align: left;
    }

    .input-area {
      position: fixed;
      bottom: 0;
      right: 0;
      width: calc(100% - 27%);
      background-color: #ffffff;
      padding: 20px;
      display: flex;
      align-items: center;
    }

    .input-area input[type="text"] {
      flex: 1;
      padding: 10px;
      font-size: 16px;
      border: 1px solid #dddddd;
      border-radius: 20px;
      outline: none;
    }

    .input-area button {
      padding: 10px 20px;
      margin-left: 10px;
      background-color: #007bff;
      color: #ffffff;
      border: none;
      border-radius: 20px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .input-area button:hover {
      background-color: #0056b3;
    }

    .search-container {
      position: relative;
      display: inline-block;
    }

    #searchUser {
      width: calc(130% - 20px);
      padding: 10px;
      font-size: 16px;
      border: 1px solid #ccc;
      border-radius: 20px;
      outline: none;
    }

    .search-button:hover {
      background-color: #0056b3;
    }

    .chat-right {
      margin-top: 0px;
    }

    .chat-left {
      margin-top: 40px;
    }

    .user-chat {
      list-style-type: none;
    }

    .user-chat li {
      padding: 20px;
      border-bottom: 1px solid #ccc;
    }

    .user-chat li:last-child {
      border-bottom: none;
    }

    .user-chat li a {
      text-decoration: none;
      color: #333;
      font-weight: bold;
      font-size: 18px;
    }

    .user-chat li a:hover {
      color: #0066cc;
    }

    .user-chat li:hover {
      background-color: #f5f5f5;
      cursor: pointer;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="user-list">
      <div class="search-container">
        <input type="text" id="searchUser" placeholder="Tìm kiếm người dùng..." />
      </div>
      <h1 class="chat-left">Danh sách người dùng</h1>
      <ul class="user-chat">
        <% allUsers.forEach(function(user) { %>
          <li>
            <a href="/chat/<%= user.roomChatId %>">
              <%= user %>
            </a>

          </li>
          <% }); %>
      </ul>
    </div>
    <div class="chat-area">
      <h1 class="chat-right">Phạm Thành Đạo
      </h1>
      <ul>
      </ul>
    </div>
  </div>
  <div class="input-area">
    <input type="text" placeholder="Nhập tin nhắn..." />
    <button>Gửi</button>
  </div>
</body>

</html>